<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="bi_financial_pdf_reports_account_financial_report_form" model="ir.ui.view">
            <field name="name">bi.financial.reports.pdf.account.financial.report.form</field>
            <field name="model">account.financial.report</field>
            <field name="arch" type="xml">
                <form string="Account Report">
                    <group col="4">
                        <field name="name"/>
                        <field name="parent_id"/>
                        <field name="sequence"/>
                        <field name="type"/>
                        <field name="sign"/>
                        <field name="style_overwrite"/>
                        <field name="report_type"/>
                    </group>
                    <notebook attrs="{'invisible': [('type','not in',['accounts','account_type', 'account_report','sum_report','header'])]}">
                        <page string="Report">
                            <group>
                                <field name="display_detail" attrs="{'invisible': [('type','not in',['accounts','account_type'])]}"/>
                                <field name="account_report_id" attrs="{'invisible': [('type', '!=', 'account_report')]}"/>
                            </group>
                            <field name="account_ids" attrs="{'invisible': [('type', 'not in', ['accounts'])]}"/>
                            <field name="account_type_ids" attrs="{'invisible': [('type', '!=', 'account_type')]}"/>
                            <field name="report_line_ids" attrs="{'invisible': [('type', 'not in', ['sum_report'])]}"/>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record id="bi_financial_pdf_reports_account_financial_report_tree" model="ir.ui.view">
            <field name="name">bi.financial.reports.v12.account.financial.report.tree</field>
            <field name="model">account.financial.report</field>
            <field name="arch" type="xml">
                <tree string="Account Report">
                    <field name="name"/>
                    <field name="parent_id"/>
                    <field name="type"/>
                    <field name="report_type"/>
                    <field name="sequence"/>
                    <field name="account_report_id" invisible="1"/>
                </tree>
            </field>
        </record>


        <record id="bi_financial_pdf_reports_account_financial_report_search" model="ir.ui.view">
            <field name="name">bi.financial.reports.v12.account.financial.report.search</field>
            <field name="model">account.financial.report</field>
            <field name="arch" type="xml">
                <search string="Account Report">
                    <field name="name" string="Account Report"/>
                    <field name="type"/>
                    <field name="account_report_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                        <filter name="parent_report" string="Parent Report" domain="" context="{'group_by':'parent_id'}"/>
                        <filter name="report_type" string="Report Type" domain="[]" context="{'group_by':'type'}"/>
                    </group>
                </search>
            </field>
        </record>


        <menuitem id="menu_financial_report" name="Financial Reports" parent="account.menu_finance_configuration"/>
        <record id="action_account_report_configuration" model="ir.actions.act_window">
            <field name="name">Financial Reports</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.financial.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_account_report_configuration" name="Account Reports" parent="menu_financial_report" action="action_account_report_configuration"/>

    </data>
</odoo>