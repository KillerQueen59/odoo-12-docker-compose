<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="report_balancesheet">
		<t t-call="web.html_container">
			<t t-call="web.internal_layout">
				<div class="page" style="font-size: 12px !important;">
					<div class="row mb3">
						<div class="col text-center">
							<span t-if="data['name'] == 'Profit and Loss'">
								<h2>
									Laba/Rugi (Standar)
								</h2>
							</span>
							<span t-elif="data['name'] == 'Cash Flow Statement'">
								<h2>
								Cash Flow (Standar)
								</h2>
							</span>
							<span t-else="">
								<h2>
									Neraca (Standar)
								</h2>
								<t t-if="data['date_to']">
								<h5>
									Per Tgl. <span t-esc="data['date_to']" />
								</h5>
								</t>
							</span>						
						</div>
					</div>
					<br/>
					<span t-if="data['name'] == 'Profit and Loss' or data['name'] == 'Cash Flow Statement'">
						<div class="row mt5 mb3">
							<div class="col" style="width:33.33%;">
								<strong>
									Target Moves:
								</strong>
								<p>
									<span t-if="data['target_move'] == 'all'">
										All Entries
									</span>
									<span t-if="data['target_move'] == 'posted'">
										All Posted Entries
									</span>
								</p>
							</div>
							<div class="col" style="width:33.33%;">
								<t t-if="data['date_from']">
									<strong>
										Date from :
									</strong>
									<p>
										<span t-esc="data['date_from']" />
									</p>
								</t>
							</div>
							<div class="col" style="width:33.33%;">
								<t t-if="data['date_to']">
									<strong>
										Date to :
									</strong>
									<p>
										<span t-esc="data['date_to']" />
									</p>
								</t>
							</div>
						</div>
						<br />
						<div class="row mt3 mb3">
							<div class="col">
								<strong>
									Project :
								</strong>
								<t t-if="data['project']">
									<p>
										<span t-esc="data['project']" />
									</p>
								</t>
								<t t-else="">
									<p>
										All
									</p>
								</t>
							</div>
						</div>
					</span>
					<br />
					<style type="text/css">
						table.table-borderless {
						border-collapse: collapse;
						cellspacing: 0;
						cellpadding: 0;
						border-spacing: 0;
						}
						table.table-borderless > tbody {
						line-height: 1;
						}
						table.table-borderless > tbody > tr > td {
						padding: 1;
						spacing: 0;
						cellspacing: 0;
						cellpadding: 0;
						border-spacing: 0;
						}
					</style>
					<div class="row mb3">
						<div class="col">
							<table class="table table-borderless" t-if="data['debit_credit'] == 1">
								<thead>
									<tr>
										<th>
											<u>
												Deskripsi
											</u>
										</th>
										<th class="text-right">
											<u>
												Debit
											</u>
										</th>
										<th class="text-right">
											<u>
												Credit
											</u>
										</th>
										<th class="text-right">
											<u>
												Balance
											</u>
										</th>
									</tr>
								</thead>
								<tbody>
									<tr t-foreach="data.get('report_lines')" t-as="a">
										<t t-if="a['level'] != 0">
											<td>
												<span style="color: white;" t-esc="'.. ' * a.get('level', 0)" />
												<span t-att-style="'font-weight: bold;' if a.get('type') in ('sum','header','sum_report','account_report') else 'font-weight: normal;'" t-esc="a.get('name')" />
											</td>
											<t t-if="a['type'] != 'header'">
											<td class="text-right" style="white-space: text-nowrap;">
												<span t-att-style="style" t-esc="'{0:,.0f}'.format(int(a.get('debit')))" />
											</td>
											<td class="text-right" style="white-space: text-nowrap;">
												<span t-att-style="style" t-esc="'{0:,.0f}'.format(int(a.get('credit')))" />
											</td>
											<td class="text-right" style="white-space: text-nowrap;">
												<span t-att-style="style" t-esc="'{0:,.0f}'.format(int(a.get('balance')))" />
											</td>
											</t>
										</t>
									</tr>
								</tbody>
							</table>
							<table class="table table-borderless" t-if="not data['enable_filter'] and not data['debit_credit']">
								<thead>
									<tr>
										<th>
											<u>
												Deskripsi
											</u>
										</th>
										<th class="text-right">
											<u>
												Balance
											</u>
										</th>
									</tr>
								</thead>
								<tbody>
									<tr t-foreach="data.get('report_lines')" t-as="a">
										<t t-if="a['level'] != 0">
											<td>
												<span style="color: white;" t-esc="'.. ' * a.get('level', 0)" />
												<span t-att-style="'font-weight: bold;' if a.get('type') in ('sum','header','sum_report','account_report') else 'font-weight: normal;'" t-esc="a.get('name')" />
											</td>
											<t t-if="a['type'] != 'header'">
											<td class="text-right">
											
												<span t-att-style="style" t-esc="'{0:,.0f}'.format(int(a.get('balance')))" />
											</td>
											</t>
										</t>
									</tr>
								</tbody>
							</table>
							<table class="table table-borderless" t-if="data['enable_filter'] == 1 and not data['debit_credit']">
								<thead>
									<tr>
										<th>
											<u>
												Deskripsi
											</u>
										</th>
										<th class="text-right">
											<u>
												Balance
											</u>
										</th>
										<th class="text-right">
											<span t-esc="data['label_filter']" />
										</th>
									</tr>
								</thead>
								<tbody>
									<tr t-foreach="data.get('report_lines')" t-as="a">
										<t t-if="a['level'] != 0">
											<td>
												<span style="color: white;" t-esc="'.. '" />
												<span t-att-style="'font-weight: bold;' if a.get('type') in ('sum','header','sum_report','account_report') else 'font-weight: normal;'" t-esc="a.get('name')" />
											</td>
											<t t-if="a['type'] != 'header'">
											<td class="text-right">
												<span t-att-style="style" t-esc="'{0:,.0f}'.format(int(a.get('balance')))" />
											</td>
											<td class="text-right">
												<span t-att-style="style" t-esc="'{0:,.0f}'.format(int(a.get('balance_cmp')))" />
											</td>
											</t>
										</t>
									</tr>
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</t>
		</t>
	</template>
</odoo>