<odoo>
    <data>
        <record id="employee_Penilaian_form" model="ir.ui.view">
            <field name="name">Employee Penilaian Form</field>
            <field name="model">hr.employee.penilaian</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                        <label for="employee_id" class="oe_edit_only"/>
                            <h1>
                                <field name="employee_id" widget="many2many_tags"	/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="project"/>
                                <field name="penilaian_date"/>
                                <field name="reviewer" options="{'no_quick_create': True,'no_open': True, 'no_create_edit' : True}"/>
                                <field name="name" widget="radio"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                </div>
                </form>
            </field>
        </record>

        <record id="employee_penilaian_tree" model="ir.ui.view">
            <field name="name">emoloyee penilaian Tree</field>
            <field name="model">hr.employee.penilaian</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="employee_id" widget="many2many_tags"/>
                    <field name="name"/>
                    <field name="project"/>
                    <field name="reviewer"/>
                    <field name="penilaian_date"/>
                    
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="open_employee_penilaian">
            <field name="name">Employee Penilaian</field>
            <field name="res_model">hr.employee.penilaian</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="employee_penilaian_tree"/>
        </record>

        <menuitem id="menu_employee_penilaian" name="Empoyee Penilaian"
            parent="hr.menu_open_view_employee_list_my" groups="hr.group_hr_manager"
            action="open_employee_penilaian" sequence="6"/>
    </data>
</odoo>