<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View for the Review Campaign -->

 <record id="hr_employee_review_view_form" model="ir.ui.view">
            <field name="name">hr.employee.review.form</field>
            <field name="model">hr.employee.review</field>
            <field name="arch" type="xml">
                <form string="Review Campaign">
                    <header>
                        <button name="action_generate_review_lines" string="Generate / Update Lines" type="object" class="btn-primary"
                            attrs="{'invisible': ['|', ('reviewer_ids', '=', []), ('employee_to_review_ids', '=', [])]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,done"/>
                    </header>
                    <sheet>

                        <div class="oe_title">
                            <h1><field name="name" placeholder="e.g. Q4 2025 Performance Review"/></h1>
                        </div>
                        <group>
                            <group><field name="project_id"/></group>
                            <group><field name="date"/></group>
                        </group>
                        
                        <h2>Participants</h2>
                        <group>
                            <field name="employee_to_review_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="reviewer_ids" widget="many2many_tags"/>
                        </group>
                        
                        <notebook>
                            <page string="Feedback Lines" name="feedback_lines">
                                <field name="review_line_ids">
                                    <tree string="Feedback Lines" editable="bottom">
                                        <field name="employee_id" readonly="1"/>
                                        <field name="reviewer_id" readonly="1"/>
                                        <field name="rating" widget="priority"/>
                                        <field name="description"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>



        <!-- Tree View updated with the single date field -->
        <record id="hr_employee_review_view_tree" model="ir.ui.view">
            <field name="name">hr.employee.review.tree</field>
            <field name="model">hr.employee.review</field>
            <field name="arch" type="xml">
                <tree string="Review Campaigns">
                    <field name="name"/>
                    <field name="project_id"/>
                    <!-- Renamed from 'date_start' -->
                    <field name="date"/>
                    <!-- 'date_end' field removed -->
                    <field name="state"/>
                </tree>
            </field>
        </record>


        <!-- Action needs a new name -->
        <record id="action_hr_employee_review" model="ir.actions.act_window">
            <field name="name">Review Campaigns</field>
            <field name="res_model">hr.employee.review</field>
            <field name="view_mode">tree,form</field>
        </record>


        <!-- ################################################## -->
        <!-- ##          HR EMPLOYEE REVIEW MENU ITEM         ## -->
        <!-- ################################################## -->

        <!-- This creates a new menu under the main "Employees" app -->
        <menuitem 
            id="menu_hr_employee_review" 
            name="Local Employee Reviews" 
            parent="hr.menu_open_view_employee_list_my" 
            groups="hr.group_hr_manager"
            action="action_hr_employee_review"
            sequence="25"/>
            
    </data>
</odoo>

