<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <report
                id="report_project_management"
                string="PMreport_' + (object.name.no or '') + '_' + object.current_date"
                model="project.progress.plan"
                report_type="qweb-pdf"
                name="rnet_project_management.project_progress_plan"
                file="rnet_project_management.project_progress_plan"
                print_report_name="'PMreport_' + (object.name.no or '') + '_' + object.current_date"/>

        <template id="project_progress_plan">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <!--Project Detail-->
                    <div class="page">
                        <h1>Project Management Report</h1>
                        <h3>Job Order ID:
                            <t t-esc="o.name.no"/>
                        </h3>
                        <h3>Project Name:
                            <t t-esc="o.name.name"/>
                        </h3>
                        <h3>PO / Contract No:
                            <t t-esc="o.name.no"/>
                        </h3>
                        <h3>Location:
                            <t t-esc="o.name.location.name or 'N/A'"/>
                        </h3>
                        <h3>Project Manager:
                            <t t-esc="o.name.project_manager.name or 'N/A'"/>
                        </h3>
                        <h3>Project Director:
                            <t t-esc="o.name.project_director.name or 'N/A'"/>
                        </h3>
                        <h3>Start Date:
                            <t t-esc="o.start_date"/> - Finish Date:
                            <t t-esc="o.finish_date"/>
                        </h3>
                        <h3>Status Per:
                            <t t-esc="o.current_date"/>
                        </h3>

                    </div>
                    <div class="page" style="page-break-before: always;">
                        <h2>1. Report Summary and Type Project</h2>
                        <h3>a) Contract Data</h3>
                        <h3>PO / Contract No:
                            <t t-esc="o.name.no"/>
                        </h3>
                        <h3>Order Value:
                            <t t-esc="o.name.order_value"/>
                        </h3>
                        <h3>b) Permit Documnent</h3>
                        <h3>c) Contract Execution</h3>
                        <h3>d) Certification</h3>
                        <h3>e) Change Order and Claim Summary</h3>
                        <h3>f) Contract Comment</h3>

                    </div>


                    <div class="page" style="page-break-before: always;">

                        <h2>2. Performance Data</h2>

                        <div style="display: flex; justify-content: center; align-items: center; width: 100%; height: auto;">
                            <div style="width: 100%; height: auto; text-align: center;">
                                <img t-att-src="o.sCurveChart()" style="width: 80%; height: auto;"/>
                            </div>
                        </div>
                        <!--S curve table-->
                        <h3>Table 1. S-Curve</h3>
                        <table class="table table-bordered"
                               style="border: 2px solid black; border-collapse: collapse; width: 100%;">
                            <thead>
                                <tr>
                                    <th style="text-align: right; padding: 8px; border: 1px solid black; width: 100px;">
                                        Year - Week
                                    </th>
                                    <th style="text-align: right; padding: 8px; border: 1px solid black;">Plan</th>
                                    <th style="text-align: right; padding: 8px; border: 1px solid black;">Actual</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.project_actual_plan_curve_report" t-as="line">
                                    <tr>
                                        <td style="padding: 8px; border: 1px solid black; width: 100px;">
                                            <t t-esc="line.year"/>
                                            W
                                            <t t-esc="line.weeks"/>
                                        </td>

                                        <td style="text-align: right; padding: 8px; border: 1px solid black;">
                                            <t t-esc="'%.2f' % line.plan"/>%
                                        </td>

                                        <td style="text-align: right; padding: 8px; border: 1px solid black;">
                                            <t t-esc="'%.2f' % line.actual"/>%
                                        </td>

                                    </tr>
                                </t>
                            </tbody>
                        </table>

                        <h3>Table 2. S-Curve Accumulative</h3>
                        <table class="table table-bordered"
                               style="border: 2px solid black; border-collapse: collapse; width: 100%;">
                            <thead>
                                <tr>
                                    <th style="text-align: right; padding: 8px; border: 1px solid black; width: 100px;">
                                        Year - Week
                                    </th>
                                    <th style="text-align: right; padding: 8px; border: 1px solid black;">Plan
                                        Accumulative
                                    </th>
                                    <th style="text-align: right; padding: 8px; border: 1px solid black;">Actual
                                        Accumulative
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.project_actual_plan_curve_report" t-as="line">
                                    <tr>
                                        <td style="padding: 8px; border: 1px solid black; width: 100px;">
                                            <t t-esc="line.year"/>
                                            W
                                            <t t-esc="line.weeks"/>
                                        </td>
                                        <td style="text-align: right; padding: 8px; border: 1px solid black;">
                                            <t t-esc="'%.2f' % line.accumulative_plan"/>%
                                        </td>
                                        <td style="text-align: right; padding: 8px; border: 1px solid black;">
                                            <t t-esc="'%.2f' % line.accumulative_actual"/>%
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>

                    <div class="page" style="page-break-before: always;">
                        <h2>Cashflow Analysis</h2>

                        <div style="display: flex; justify-content: center; align-items: center; width: 100%; height: auto;">
                            <div style="width: 100%; height: auto; text-align: center;">
