<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_task_gantt" model="ir.ui.view">
        <field name="name">gantt.task.gantt</field>
        <field name="model">gantt.task</field>
        <field name="priority">10</field>
        <field name="type">ganttview</field>
        <field name="arch" type="xml">
            <ganttview
            date_start="start_date"
            date_stop="end_date"
            progress="progress"
            default_group_by="project_id"
            string="Tasks Gantt"
            show_links="true"
            link_model="gantt.task.link"
            task_type="task_type"
            actual_start="actual_start_date"
            actual_end="actual_end_date"
            baseline_start="start_date"
            baseline_end="end_date"
            parent_field="parent_id"
            round_dnd_dates="false"
            default_scale="month"
            highlight_critical_path="true">
        </ganttview>
        </field>
    </record>

    <record id="view_task_tree" model="ir.ui.view">
        <field name="name">gantt.task.tree</field>
        <field name="model">gantt.task</field>
        <field name="arch" type="xml">
            <tree string="Tasks"
                  decoration-success="state == 'done'"
                  decoration-info="state == 'in_progress'"
                  decoration-warning="state == 'draft'"
                  decoration-danger="state == 'cancelled' or is_delayed == True"
                  decoration-bf="child_ids != []">
            <field name="sequence" widget="handle"/>
            <field name="task_id"/>
            <field name="parent_task_id"/>
            <field name="wbs_code"/>
            <field name="name"/>
            <field name="parent_id" invisible="1"/>
            <field name="child_ids" invisible="1"/>
            <field name="project_id"/>
            <field name="task_type"/>
            <field name="supervisor_id"/>
            <field name="actual_start_date"/>
            <field name="actual_end_date"/>
            <field name="start_date"/>
            <field name="end_date"/>
            <field name="duration"/>
            <field name="actual_duration"/>
            <field name="delay_days"/>
            <field name="progress" string="Progress (%)" />
            <field name="state"/>
            <field name="predecessor_ids"/>
            <field name="successor_ids"/>
            <field name="is_delayed" invisible="1"/>
        </tree>
        </field>
    </record>

    <record id="view_task_form" model="ir.ui.view">
        <field name="name">gantt.task.form</field>
        <field name="model">gantt.task</field>
        <field name="arch" type="xml">
             <form string="Task">
            <header>
                <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,done"/>
                <button name="action_delete_with_children" string="Delete with Sub-tasks"
                        type="object" class="btn-danger"
                        attrs="{'invisible': [('child_ids', '=', [])]}"/>
            </header>
            <sheet>
                <div class="oe_title">
                    <label for="wbs_code" class="oe_edit_only"/>
                    <h2>
                        <field name="wbs_code" class="oe_inline" readonly="1"/>
                    </h2>
                    <h1>
                        <field name="name" placeholder="Task Name"/>
                    </h1>
                </div>
                <div class="alert alert-warning" attrs="{'invisible': [('is_delayed', '=', False)]}">
                    <strong>Delayed Task:</strong> This task is <field name="delay_days"/> days behind baseline schedule.
                </div>
                <group>
                    <group string="Task Information">
                        <field name="project_id"/>
                        <field name="task_id" placeholder="e.g., T001, TASK-001"/>
                        <field name="parent_task_id" placeholder="Enter parent's Task ID (optional)"/>
                        <field name="parent_id"
                               domain="[('project_id', '=', project_id), ('id', '!=', id), ('task_type', '!=', 'milestone')]"
                               options="{'no_create': True}"
                               attrs="{'readonly': [('parent_task_id', '!=', False)]}"/>
                        <field name="level" invisible="1"/>
                        <field name="task_type"/>
                        <field name="supervisor_id"/>
                        <field name="priority"/>
                        <field name="deadline"/>
                    </group>
                    <group>
                        <field name="progress" string="Progress (%)" placeholder="Enter 0-100"/>
                        <field name="sequence"/>
                        <field name="color"/>
                        <field name="is_delayed" invisible="1"/>
                    </group>
                </group>
                <group>
                    <group string="Baseline (Original Plan)">
                        <field name="start_date" on_change="1" force_save="1" attrs="{'required': [('child_ids', '=', [])]}"/>
                        <field name="end_date" force_save="1" attrs="{'required': [('child_ids', '=', [])]}"/>
                        <field name="duration" readonly="1"/>
                        <!-- Helper text for parent tasks -->
                        <div class="alert alert-info" attrs="{'invisible': [('child_ids', '=', [])]}">
                            <i class="fa fa-info-circle"/>
                            <strong>Parent Task:</strong> Dates can be set outside children's range.
                            They will auto-expand if children exceed them.
                        </div>
                    </group>
                    <group string="Actual (Current Plan)">
                        <field name="actual_start_date" placeholder="Optional - Leave blank to use baseline" on_change="1" force_save="1"/>
                        <field name="actual_end_date" placeholder="Optional - Leave blank to use baseline" force_save="1"/>
                        <field name="actual_duration" readonly="1"/>
                        <!-- Helper text for parent tasks -->
                        <div class="alert alert-info" attrs="{'invisible': [('child_ids', '=', [])]}">
                            <i class="fa fa-info-circle"/>
                            <strong>Parent Task:</strong> Dates can be set outside children's range.
                            They will auto-expand if children exceed them.
                        </div>
                    </group>
                </group>
                <notebook>
                    <page string="Sub-tasks" attrs="{'invisible': [('task_type', '=', 'milestone')]}">
                        <field name="child_ids" context="{'default_project_id': project_id, 'default_parent_id': id}">
                            <tree editable="bottom">
                                <field name="sequence" widget="handle"/>
                                <field name="task_id"/>
                                <field name="wbs_code"/>
                                <field name="name"/>
                                <field name="project_id" invisible="1"/>
                                <field name="task_type"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="actual_start_date"/>
                                <field name="actual_end_date"/>
                                <field name="progress" widget="progressbar"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Task Links &amp; Dependencies" attrs="{'invisible': [('child_ids', '!=', [])]}">
                        <group>
                            <group string="Dependencies (Auto-computed from Links)">
                                <field name="predecessor_ids" readonly="1" placeholder="No predecessors"/>
                                <field name="successor_ids" readonly="1" placeholder="No successors"/>
                            </group>
                            <group string="Actions">
                                <button name="action_create_missing_links"
                                        string="Create Missing Links"
                                        type="object"
                                        class="btn-success"
                                        help="Create task links based on predecessor/successor text fields"/>
                                <button name="action_sync_predecessor_successor"
                                        string="Refresh Display"
                                        type="object"
                                        class="btn-primary"
                                        help="Refresh predecessor/successor fields from existing links"/>
                            </group>
                        </group>
                        <separator string="Task Links"/>
                        <field name="task_link_ids">
                            <tree editable="bottom">
                                <field name="target_task_id" domain="[('project_id', '=', parent.project_id), ('child_ids', '=', [])]"/>
                                <field name="link_type"/>
                            </tree>
                        </field>
                        <div class="alert alert-info" role="alert">
                            <strong>How it works:</strong>
                            <ul>
                                <li><strong>In Tree View:</strong> You can type predecessor/successor Task IDs directly (e.g., "T001, T002")</li>
                                <li><strong>Order doesn't matter:</strong> Create tasks in any order, then click "Create Missing Links"</li>
                                <li><strong>Auto-sync in Gantt:</strong> Links created in Gantt view automatically update these fields</li>
                                <li><strong>Manual Links:</strong> You can also create links manually in the "Task Links" table below</li>
                            </ul>
                            <p><strong>Tip:</strong> When creating multiple tasks at once with predecessors/successors, save all tasks first, then click "Create Missing Links" button in the project header or task form.</p>
                        </div>
                    </page>
                </notebook>
            </sheet>
        </form>
        </field>
    </record>

    <record id="view_task_search" model="ir.ui.view">
        <field name="name">gantt.task.search</field>
        <field name="model">gantt.task</field>
        <field name="arch" type="xml">
            <search string="Tasks">
                <field name="name"/>
                <field name="project_id"/>
                <field name="supervisor_id"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                <separator/>
                <filter string="Delayed Tasks" name="delayed" domain="[('is_delayed', '=', True)]"/>
                <filter string="On Schedule" name="on_schedule" domain="[('is_delayed', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Project" name="project" context="{'group_by': 'project_id'}"/>
                    <filter string="Supervisor" name="supervisor" context="{'group_by': 'supervisor_id'}"/>
                    <filter string="State" name="state" context="{'group_by': 'state'}"/>
                    <filter string="Delay Status" name="delay_status" context="{'group_by': 'is_delayed'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_project_task" model="ir.actions.act_window">
        <field name="name">Gantt Tasks</field>
        <field name="res_model">gantt.task</field>
        <field name="view_mode">tree,form,ganttview</field>
        <field name="search_view_id" ref="view_task_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No tasks found for this project!
            </p>
            <p>
                Get started by creating your first task to begin project planning and tracking.
            </p>
            <p>
                <strong>Features available:</strong>
            </p>
            <ul>
                <li>ðŸ“Š Gantt chart visualization with baseline tracking</li>
                <li>ðŸ”— Task dependencies and critical path analysis</li>
                <li>ðŸ“ˆ Progress monitoring and delay detection</li>
                <li>ðŸ‘¥ Supervisor assignment and team collaboration</li>
            </ul>
        </field>
    </record>

    <menuitem id="menu_project_task"
        name="Tasks"
        action="action_project_task"
        parent="project.menu_main_pm"
        sequence="10"/>
</odoo>
